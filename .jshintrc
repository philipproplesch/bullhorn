{

  // Enforcing options
  // http://www.jshint.com/docs/options/#enforcing-options

  "bitwise": true,
  "eqeqeq": true,
  "forin": true,
  "latedef": true,
  "noarg": true,
  "nonbsp": true,
  "nonew": true,
  "quotmark": "single",
  "undef": true,
  "unused": true,

  // - - - - - - - - - - - - - - - - - - - - - - - - - - -

  // Relaxing options
  // http://www.jshint.com/docs/options/#relaxing-options

  "esnext": true,

  // - - - - - - - - - - - - - - - - - - - - - - - - - - -

  // Environments
  // http://www.jshint.com/docs/options/#environments

  "browser": true,
  "jquery": true,
  "node": true,

  "globals": {
    "nodeHelper": false,
    "angular": false,
    "io": false,
    "_": false,

    "sinon": false,

    "describe": false,
    "it": false,
    "before": false,
    "beforeEach": false,
    "after": false,
    "afterEach": false,
    "expect": false,

    "inject": false
  }
}
